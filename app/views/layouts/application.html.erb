<!DOCTYPE html>
<html>
  <head>
    <title><%= html_title %></title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header class="header">
      <%= render 'brand' %>
      <%= render 'search' %>
      <%= render 'navigation' %>
      <%= render 'messages' %>
    </header>
    <main>
      <aside class="sidebar">
        <%= render 'sidebar' %>
      </aside>
      <section class="content">
        <%= yield %>
      </section>
    </main>
  </body>
</html>
