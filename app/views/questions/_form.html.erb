<%= form_for question do |form| %>
  <%= form.base_errors %>

  <%= form.collection_select :topic_id, Topic.all, :id, :name %>
  <%= form.text_area         :content, rows: 3, class: 'wide' %>

  <h2 class="legend"><%= t('.question_options') %></h2>

  <table class="question-options">
    <%= form.fields_for :options do |options_form| %>
      <%= render 'option_fields', form: options_form %>
    <% end %>
  </table>
  <%= link_to_add_fields(t('.add_option'), form, :options, '.question-options') %>

  <%= form.submit %>
<% end %>
